<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.listaurant.txt.repository.TxtMapper">
    <insert id="saveTxt" parameterType="TxtEntity" useGeneratedKeys="true">
        insert into txt (txt_id, place_name, written_date, recommend, scope, member_id, text)
        values (#{email}, #{passwd}, #{pno}, #{role} )
    </insert>
    <select id="findByEmail" parameterType="string" resultType="MemberEntity">
        select * from member
        where email = #{email}
    </select>
</mapper>