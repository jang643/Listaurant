<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.listaurant.member.repository.MemberMapper">
    <insert id="save" parameterType="MemberEntity" useGeneratedKeys="true">
        insert into member (email, passwd, pno, role)
        values (#{email}, #{passwd}, #{pno}, #{role} )
    </insert>
    <select id="findByEmail" parameterType="string" resultType="MemberEntity">
        select * from member
        where email = #{email}
    </select>
    <select id="findById" parameterType="long" resultType="MemberEntity">
        select * from member
        where member_id = #{memberId}
    </select>
    <update id="update" parameterType="MemberEntity">
        update member set pno = #{pno}
        where member_id = #{memberId}
    </update>

    <delete id="delete" parameterType="long">
        delete from member where member_id = #{memberId}
    </delete>
</mapper>


